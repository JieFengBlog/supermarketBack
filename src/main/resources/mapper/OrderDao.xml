<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czxy.back.dao.OrderDao">

    <resultMap id="orderUser" type="order">
        <id column="id" property="id"/>
        <result column="order_number" property="orderNumber"/>
        <result column="order_price" property="orderPrice"/>
        <result column="order_provide" property="orderProvide"/>
        <association property="user" select="com.czxy.back.dao.UserDao.getUserById" column="user_id">

        </association>
    </resultMap>

    <select id="getOrderById" resultMap="orderUser">
        select * from tb_order where id = #{id}
    </select>

    <select id="getAllOrder" resultMap="orderUser" parameterType="integer">
        select * from tb_order
        <where>
            <if test="_parameter  != null">
                order_status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <insert id="insertOrder" parameterType="order" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into tb_order(order_number,order_price,order_provide,user_id,order_status,order_type,create_time,settlement_time)
        values(#{orderNumber},#{orderPrice},#{orderProvide},#{user.id},#{orderStatus},#{orderType},#{createTime},#{settlementTime})
    </insert>


    <update id="updateOrder" parameterType="order">
        update tb_order
        <trim prefix="set" suffixOverrides=",">
            <if test="orderPrice != null and orderPrice != 0">
                order_price = #{orderPrice},
            </if>
            <if test="orderProvide != null and orderProvide != ''">
                order_provide = #{orderProvide},
            </if>
            <if test="orderStatus != null">
                order_status = #{orderStatus},
            </if>
            <if test="createTime != null">
                create_time = #{createTime}
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOrder" parameterType="integer">
        delete from tb_order where id = #{id}
    </delete>

    <select id="everyDayOrderCount" resultType="int">
        SELECT count(*) FROM tb_order WHERE TO_DAYS( NOW( ) ) - TO_DAYS(create_time) = #{day} and order_type = #{orderType}
    </select>

    <select id="countOrder" resultType="int">
        select count(*) from tb_order where order_type = #{type}
    </select>
</mapper>