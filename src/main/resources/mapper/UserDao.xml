<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.czxy.back.dao.UserDao">


    <select id="getUserById" resultType="user">
        select * from tb_user where id = #{id}
    </select>

    <!--获取所有用户-->
    <select id="getAllUser" resultType="user">
        select * from tb_user order by id desc
    </select>


    <insert id="addUser" parameterType="user">
        insert into tb_user(name,phone,email,address,user_status,register_time)
        values(#{name},#{phone},#{email},#{address},#{userStatus},#{registerTime})
    </insert>

    <update id="updateUserById" parameterType="user">
        update tb_user
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="userStatus != null">
                user_status = #{userStatus},
            </if>
        </trim>
        where id = #{id}
    </update>


    <delete id="deleteUserById" parameterType="integer">
        delete from tb_user where id = #{id}
    </delete>

    <select id="countUser" resultType="int">
        select count(*) from tb_user
    </select>



    <select id="everyDayUserCount" resultType="int">
        SELECT count(*) FROM tb_user WHERE TO_DAYS( NOW( ) ) - TO_DAYS(register_time) = #{day}
    </select>


    <!--多条件查询-->
    <!--
        根据查询的条件有: 商品的名称(模糊查询) 商品的分类TODO 商品的提供商(模糊查询)
    -->
    <select id="getUserListByCondition" resultType="user" >
        <!--使用bind标签将name和provide进行处理-->
        select * from tb_user
        <trim prefix="where" prefixOverrides="or">
            <if test="name != null and name != ''">
                or name like '%${name}%'
            </if>
        </trim>
        order by id desc
    </select>
</mapper>