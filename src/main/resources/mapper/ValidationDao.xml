<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.czxy.back.dao.ValidationDao">
    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>


    <select id="getUserByUsername" parameterType="java.lang.String" resultType="validation">
        select username,password from tb_validation where username = #{username}
    </select>

</mapper>